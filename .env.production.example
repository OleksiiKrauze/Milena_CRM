# PostgreSQL Configuration
POSTGRES_DB=crm_production
POSTGRES_USER=crm_user_prod
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Application Configuration
APP_PORT=8000

# JWT Secret (MUST generate new one for production!)
# Generate: openssl rand -hex 32
JWT_SECRET_KEY=GENERATE_NEW_SECRET_KEY_HERE

# CORS Configuration (replace with your domain)
CORS_ORIGINS=https://crm.example.com

# Logging
LOG_LEVEL=INFO

# OpenAI API Key for case autofill functionality
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
